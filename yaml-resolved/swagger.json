---
swagger: "2.0"
info:
  description: "post and pull employees from the DB"
  version: "1.0.0"
  title: "HR API 1.0.1"
host: "virtserver.swaggerhub.com"
basePath: "/SE-Design/Temil_HR_API_team2/1.0.0"
schemes:
- "https"
paths:
  /users:
    get:
      description: "Allows users to get employees from the database"
      parameters: []
      responses:
        200:
          description: "OK"
          schema:
            $ref: "#/definitions/inline_response_200"
        400:
          description: "Invalid request"
          schema:
            $ref: "#/definitions/inline_response_400"
definitions:
  inline_response_200:
    required:
    - "email"
    - "firstName"
    - "lastName"
    - "userUUid"
    properties:
      userUUid:
        type: "string"
        format: "uuid"
        example: "113a3d8d-ddac-4b0f-9f16-15123512"
        description: "ID from DB"
      email:
        type: "string"
        format: "email"
        example: "ts@smartbear.com"
        description: "user email from DB"
      firstName:
        type: "string"
        example: "temil"
        description: "users first name"
      lastName:
        type: "string"
        example: "temil"
        description: "users last name"
  inline_response_400:
    properties:
      message:
        type: "string"
        example: "You have hit an invalid request. Please check your parameters again"
